<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.shape.Rectangle?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="de.fhzwickau.reisewelle.controller.user.TicketCardController"
      spacing="12"
      style="-fx-background-color: #fafdff; -fx-background-radius: 18; -fx-padding: 16 22 16 22; -fx-effect: dropshadow(gaussian,rgba(120,130,160,0.10),10,0,0,2);">
    <HBox spacing="22" alignment="CENTER_LEFT">
        <Label fx:id="fromToLabel"
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #3776c7;"/>
        <Label fx:id="priceLabel"
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #26c281;"/>
    </HBox>
    <HBox spacing="18" alignment="CENTER_LEFT">
        <Label fx:id="dateLabel"
               style="-fx-font-size: 15px; -fx-text-fill: #6a6f7a;"/>
        <Label fx:id="passengersLabel"
               style="-fx-font-size: 15px; -fx-text-fill: #2d3b50;"/>
    </HBox>
</VBox>
