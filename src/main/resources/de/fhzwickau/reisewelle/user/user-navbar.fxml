<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Region?>

<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="de.fhzwickau.reisewelle.controller.user.UserNavbarController"
      spacing="18"
      alignment="CENTER_LEFT"
      style="-fx-background-color: #3776c7; -fx-padding: 0 90 0 32; -fx-min-height: 54px;">
    <Label text="ReiseWelle"
           style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white; -fx-padding: 0 36 0 0;"/>
    <Region HBox.hgrow="ALWAYS"/>
    <Button fx:id="tripsBtn" text="Reisen" onAction="#goTrips"
            style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;"/>
    <Button fx:id="profileBtn" text="Profil" onAction="#goProfile"
            style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;"/>
    <Button fx:id="logoutBtn" text="Logout" onAction="#logout"
            style="-fx-background-color: #fc5c7d; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-font-size: 15px; -fx-padding: 4 18 4 18;"/>
</HBox>
