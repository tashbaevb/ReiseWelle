<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="de.fhzwickau.reisewelle.controller.user.TripController"
            prefHeight="500.0" prefWidth="840.0"
            style="-fx-background-color: #f6fafd;">

    <VBox spacing="20" alignment="TOP_CENTER"
          style="-fx-background-color: #ffffff; -fx-background-radius: 18; -fx-effect: dropshadow(gaussian,rgba(120,130,160,0.10),16,0,0,4); -fx-padding: 32;">
        <HBox spacing="10" alignment="CENTER">
            <TextField fx:id="fromCityField" promptText="Von" style="-fx-background-radius: 8; -fx-font-size: 15px;" prefWidth="110"/>
            <TextField fx:id="toCityField" promptText="Nach" style="-fx-background-radius: 8; -fx-font-size: 15px;" prefWidth="110"/>
            <AnchorPane fx:id="datetimePickerContainer" prefHeight="36" prefWidth="170"/>
            <Label text="Erwachsene:" style="-fx-font-size: 14px;"/>
            <Spinner fx:id="adultSpinner" prefWidth="56"/>
            <Label text="Kinder:" style="-fx-font-size: 14px;"/>
            <Spinner fx:id="childSpinner" prefWidth="56"/>
            <Label text="FahrrÃ¤der:" style="-fx-font-size: 14px;"/>
            <Spinner fx:id="bikeSpinner" prefWidth="56"/>
            <Button text="Suchen" onAction="#onSearchClicked"
                    style="-fx-background-color: #26c281; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-size: 15px; -fx-font-weight: bold;"/>
        </HBox>

        <HBox alignment="CENTER" spacing="26">
            <Separator HBox.hgrow="ALWAYS" style="-fx-background-color: #e6e6e6;"/>
            <Label text="Gefundene Fahrten" style="-fx-text-fill: #2d3b50; -fx-font-weight: bold; -fx-font-size: 19px;"/>
            <Separator HBox.hgrow="ALWAYS" style="-fx-background-color: #e6e6e6;"/>
        </HBox>

        <TableView fx:id="tripTable" onMouseClicked="#onTripSelected" prefHeight="260" style="-fx-background-radius: 10;">
            <columns>
                <TableColumn fx:id="fromColumn" text="Von" prefWidth="120"/>
                <TableColumn fx:id="toColumn" text="Nach" prefWidth="120"/>
                <TableColumn fx:id="departureColumn" text="Abfahrt" prefWidth="110"/>
                <TableColumn fx:id="arrivalColumn" text="Ankunft" prefWidth="110"/>
                <TableColumn fx:id="priceColumn" text="Preis" prefWidth="100"/>
            </columns>
        </TableView>
    </VBox>
</AnchorPane>
