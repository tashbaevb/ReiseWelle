<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Button?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="de.fhzwickau.reisewelle.controller.user.DetailTripController">

    <VBox spacing="10">
        <Label fx:id="busLabel" text="Bus"/>
        <Label fx:id="priceLabel" text="Preis: "/>
        <Button fx:id="buyBtn" text="Kaufen" onAction="#onBuy"/>
        <Label text="Stops:"/>
        <ListView fx:id="stopsList"/>
    </VBox>
</AnchorPane>


