<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.shape.Rectangle?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="de.fhzwickau.reisewelle.controller.user.DetailTripController"
            prefHeight="380.0" prefWidth="420.0"
            style="-fx-background-color: #f6fafd;">

    <VBox spacing="18" alignment="TOP_CENTER"
          layoutX="20" layoutY="20"
          style="-fx-background-color: #ffffff; -fx-background-radius: 16; -fx-effect: dropshadow(gaussian,rgba(120,130,160,0.11),16,0,0,3); -fx-padding: 26;">
        <Label fx:id="busLabel" text="Bus" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2d3b50;"/>
        <Label fx:id="priceLabel" text="Preis: " style="-fx-font-size: 16px; -fx-text-fill: #318a5e; -fx-padding: 0 0 10 0;"/>

        <Button fx:id="buyBtn" text="Ticket kaufen" onAction="#onBuy"
                style="-fx-background-color: #26c281; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-size: 16px; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian,rgba(60,120,100,0.10),8,0,0,2); -fx-padding: 8 32;"/>

        <Label text="Stopps:" style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #495870; -fx-padding: 16 0 0 0;"/>

        <ListView fx:id="stopsList" prefHeight="130.0" style="-fx-background-radius: 8;"/>
    </VBox>
</AnchorPane>
