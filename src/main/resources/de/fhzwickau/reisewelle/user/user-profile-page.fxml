<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.ListView?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="de.fhzwickau.reisewelle.controller.user.UserProfilePageController"
            prefHeight="400.0" prefWidth="480.0"
            style="-fx-background-color: #f6fafd;">

    <VBox spacing="22" alignment="TOP_CENTER"
          style="-fx-background-color: #ffffff; -fx-background-radius: 16; -fx-padding: 32 26 32 26; -fx-effect: dropshadow(gaussian,rgba(120,130,160,0.09),15,0,0,3);">

        <!-- User info -->
        <GridPane hgap="12" vgap="8">
            <Label text="E-Mail:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-weight: bold; -fx-font-size: 15px;"/>
            <Label fx:id="emailLabel" GridPane.rowIndex="0" GridPane.columnIndex="1" style="-fx-font-size: 15px;"/>
        </GridPane>

        <Separator/>

        <!-- Tickets List -->
        <Label text="Ihre Tickets:" style="-fx-font-weight: bold; -fx-font-size: 15px;"/>
        <ListView fx:id="ticketsListView" prefHeight="170" style="-fx-background-radius: 8;"/>
    </VBox>
</AnchorPane>
