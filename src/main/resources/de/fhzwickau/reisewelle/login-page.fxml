<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="de.fhzwickau.reisewelle.controller.LoginController"
            prefHeight="440.0" prefWidth="720.0"
            style="-fx-background-color: #eaf4fb;">
    <left>
        <AnchorPane prefWidth="350.0" prefHeight="440.0"
                    style="-fx-background-color: #fafdff; -fx-border-color: #d3e2ef; -fx-border-width: 0 2 0 0; -fx-border-radius: 14 0 0 14; -fx-background-radius: 14 0 0 14; -fx-effect: dropshadow(gaussian,rgba(120,130,160,0.10),16,0,0,2);">
            <children>
                <ImageView fitHeight="90.0" fitWidth="90.0" layoutX="130.0" layoutY="44.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@images/Lupa.png"/>
                    </image>
                </ImageView>
                <Label layoutX="60.0" layoutY="145.0" text="Anmeldung" style="-fx-font-size: 25px; -fx-font-weight: bold; -fx-text-fill: #3776c7;"/>
                <TextField fx:id="emailField" layoutX="40.0" layoutY="195.0" prefHeight="32.0" prefWidth="260.0"
                           promptText="E-Mail"
                           style="-fx-background-radius: 8; -fx-font-size: 14px;"/>
                <PasswordField fx:id="passwordField" layoutX="40.0" layoutY="240.0" prefHeight="32.0" prefWidth="260.0"
                               promptText="Passwort"
                               style="-fx-background-radius: 8; -fx-font-size: 14px;"/>
                <Button fx:id="loginbutton" layoutX="85.0" layoutY="295.0" prefHeight="40.0" prefWidth="180.0"
                        onAction="#login"
                        style="-fx-background-color: #3776c7; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-size: 16px; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian,rgba(55,118,199,0.10),7,0,0,1);">
                    Einloggen
                </Button>
                <Label layoutX="60.0" layoutY="360.0"
                       text="Sie haben noch kein Konto? Jetzt registrieren"
                       style="-fx-font-size: 12px; -fx-text-fill: #548dc1; -fx-underline: true; -fx-cursor: hand;"
                       onMouseClicked="#openRegisterWindow"/>
            </children>
        </AnchorPane>
    </left>
    <center>
        <AnchorPane prefHeight="440.0" prefWidth="370.0">
            <children>
                <ImageView fitHeight="340.0" fitWidth="340.0" layoutX="15.0" layoutY="50.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@images/RyanGosling.png"/>
                    </image>
                </ImageView>
            </children>
        </AnchorPane>
    </center>
</BorderPane>
