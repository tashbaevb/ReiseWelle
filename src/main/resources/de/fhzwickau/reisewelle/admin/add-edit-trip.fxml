<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="de.fhzwickau.reisewelle.controller.admin.AddEditTripController"
      spacing="10" prefWidth="700" prefHeight="600" style="-fx-padding:10;">

    <Label text="Add/Edit Trip" style="-fx-font-size:16; -fx-font-weight:bold;"/>

    <GridPane hgap="10" vgap="5">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT"/>
            <ColumnConstraints hgrow="ALWAYS"/>
            <ColumnConstraints halignment="RIGHT"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints vgrow="NEVER"/>
            <RowConstraints vgrow="NEVER"/>
        </rowConstraints>

        <!-- Core trip fields -->
        <Label text="Bus:"           GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <ComboBox fx:id="busComboBox"           GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        <Label text="Driver:"        GridPane.rowIndex="0" GridPane.columnIndex="2"/>
        <ComboBox fx:id="driverComboBox"        GridPane.rowIndex="0" GridPane.columnIndex="3"/>

        <Label text="Departure:"     GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <DatePicker fx:id="departureDatePicker" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        <Label text="Status:"        GridPane.rowIndex="1" GridPane.columnIndex="2"/>
        <ComboBox fx:id="statusComboBox"        GridPane.rowIndex="1" GridPane.columnIndex="3"/>
    </GridPane>

    <HBox spacing="20">
        <!-- Stops panel -->
        <VBox>
            <Label text="Stops:"/>
            <TableView fx:id="stopsTable" prefHeight="200" prefWidth="350">
                <columns>
                    <TableColumn text="#"   fx:id="orderColumn"/>
                    <TableColumn text="City"   fx:id="cityColumn"/>
                    <TableColumn text="Arrive" fx:id="arrivalColumn"/>
                    <TableColumn text="Depart" fx:id="departureColumn"/>
                </columns>
            </TableView>
            <HBox spacing="10">
                <Button text="Add Stop"    onAction="#addStop"/>
                <Button text="Remove"      onAction="#removeStop"/>
                <Button text="Move Up"     onAction="#moveStopUp"/>
                <Button text="Move Down"   onAction="#moveStopDown"/>
                <Button text="Set Start"   onAction="#markAsStart"/>
            </HBox>
        </VBox>

        <!-- Pricing panel: shows only stops after the start -->
        <VBox>
            <Label text="Pricing (price from start to each stop after the first):"/>
            <TableView fx:id="priceTable" prefHeight="150" prefWidth="300" editable="true">
                <columns>
                    <TableColumn text="City"  fx:id="priceCityColumn"/>
                    <TableColumn text="Price" fx:id="priceColumn"/>
                </columns>
            </TableView>
            <Button text="Refresh Prices" onAction="#updatePrices"/>
        </VBox>
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Save"   onAction="#save"/>
        <Button text="Cancel" onAction="#cancel"/>
    </HBox>
</VBox>
