<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="de.fhzwickau.reisewelle.controller.admin.city.AdminCityController"
      spacing="18"
      style="-fx-padding: 26; -fx-background-radius: 16; -fx-background-color: #fafdff; -fx-effect: dropshadow(gaussian,rgba(90,140,200,0.08),16,0,0,3);">
    <Label text="Städte" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #3776c7;"/>
    <TableView fx:id="citiesTable" prefHeight="340.0" style="-fx-background-radius: 8;">
        <columns>
            <TableColumn fx:id="nameColumn" text="Stadt" prefWidth="190.0"/>
            <TableColumn fx:id="countryColumn" text="Land" prefWidth="180.0"/>
        </columns>
    </TableView>
    <HBox spacing="18" alignment="CENTER_RIGHT">
        <Button fx:id="addButton" text="Hinzufügen" onAction="#onAdd"
                style="-fx-background-color: #26c281; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-min-width: 110px;"/>
        <Button fx:id="editButton" text="Ändern" disable="true" onAction="#onEdit"
                style="-fx-background-color: #ffd447; -fx-text-fill: #2d3b50; -fx-font-weight: bold; -fx-background-radius: 8; -fx-min-width: 110px;"/>
        <Button fx:id="deleteButton" text="Löschen" disable="true" onAction="#onDelete"
                style="-fx-background-color: #fc5c7d; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-min-width: 110px;"/>
    </HBox>
</VBox>
