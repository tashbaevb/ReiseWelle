    <Label text="Name" style="-fx-font-size: 13px;"/>
    <TextField fx:id="nameField" promptText="z.B. Max" style="-fx-background-radius: 8; -fx-font-size: 14px;"/>

    <HBox spacing="18" alignment="CENTER_RIGHT" style="-fx-padding: 18 0 0 0;">
